{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    },
    "target": "ESNext",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "declaration": true,
    "noImplicitReturns": false,
    "outDir": "dist",
    "types": ["node"]
  },
  "include": [
    "packages/**/*",
    "additional.d.ts",
    "packages/index.ts",
    "**/*.d.ts"
  ],
  "exclude": ["node_modules", "lib", "jest.setup.ts", "dist"]
}
